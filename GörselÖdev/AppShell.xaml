<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GörselÖdev.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GörselÖdev"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Ana Sayfa "
        Icon="home.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
      Title="Kredi Hesaplama"
        Icon="calculator.png"
      ContentTemplate="{DataTemplate local:KrediHesaplama}"
      Route="KrediHesaplama" />
    <ShellContent
      Title="Vücut Kitle İndexi"
        Icon="scale.png"
      ContentTemplate="{DataTemplate local:VucutKitleİndeksi}"
      Route="VucutKitleİndeksi" />
    <ShellContent
        Icon="palette.png"
      Title="Renk Seçici"
      ContentTemplate="{DataTemplate local:RenkSecici}"
      Route="RenkSecici" />
    <ShellContent
      Title="Yapılacaklar"
        Icon="todolist.png"
      ContentTemplate="{DataTemplate local:Yapilacaklar}"
      Route="Yapilacaklar" />

</Shell>
